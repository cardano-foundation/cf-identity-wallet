{
    "compilerOptions": {
      "allowJs": true,
      "lib": ["es2018"],
      "module": "commonjs",
      "moduleResolution": "node",
      "target": "es2018",
      "noImplicitReturns": true,
      "noFallthroughCasesInSwitch": true,
      "pretty": true,
      "strict": true,
      "sourceMap": true,
      "outDir": "./build",
      "skipLibCheck": true,
      "noImplicitAny": false,
      "esModuleInterop": true,
      "declaration": true
    },
    "include": ["src/**/*"],
    "compileOnSave": false
  }
  