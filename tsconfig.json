{
  "compilerOptions": {
    "target": "es5",
    "baseUrl": ".",
    "lib": [
      "es5",
      "dom",
      "dom.iterable",
      "es2015.core"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "features/wallet/wallet.machine.js",
    "node_modules/@stencil/core/compiler/lib.es5.d.ts"
  ],
  "exclude": ["node_modules", "packages/**/*"]
}
